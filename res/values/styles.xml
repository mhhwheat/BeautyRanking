<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="main_page_tab">  
    	
    	    	
    	<item name="android:textSize">14sp</item>  
    	<item name="android:background">@drawable/main_tab_selector</item>
    	<item name="android:textColor">@color/tab_text_color_selector</item>
	</style> 
	
	
	<style name="tab_text_style">
	    <item name="android:textSize">12sp</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	    <!-- <item name="android:textColor">@drawable/tab_text_background</item> -->
	</style>
	
	<style name="tab_img_style">
	    <item name="android:layout_marginTop">10dp</item>
	     <item name="android:layout_width">45dp</item>
	     <item name="android:layout_height">31dp</item>
	     <item name="android:scaleType">fitXY</item>
	     <item name="android:adjustViewBounds">true</item>
	</style>
	<!-- 关注 -->
	<style name="tab_layout_style">
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:orientation">vertical</item>
	    <item name="android:clickable">true</item>

