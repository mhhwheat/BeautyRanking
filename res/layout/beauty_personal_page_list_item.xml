<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/beauty_personal_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/beauty_personal_contenDescription"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView 
                android:id="@+id/beauty_personal_publisher_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="豆芽"/>
            <TextView
                android:id="@+id/beauty_personal_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="5分钟前"/>"
        </LinearLayout>"
    </LinearLayout>
    <ImageView 
        android:id="@+id/beauty_personal_photo"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <TextView 
        android:id="@+id/beauty_personal_photo_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="当地时间6月4日，英国伦敦绘公司将亚洲狮的脸描摹在人体模特身上，为伦敦动物学学会分支机构揭幕，呼吁保护濒危生物。"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView 
            android:id="@+id/beauty_personal_comment_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:text="123"/>
        <ImageView 
            android:id="@+id/beauty_personal_comment_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/beauty_personal_comment_times"
            android:contentDescription="@string/beauty_personal_contenDescription"/>
         <TextView 
            android:id="@+id/beauty_personal_praise_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/beauty_personal_comment_button"
            android:textSize="15sp"
            android:text="456"/>
        <ImageView 
            android:id="@+id/beauty_personal_praise_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/beauty_personal_praise_times"
            android:contentDescription="@string/beauty_personal_contenDescription"/>
    </RelativeLayout>
 

</LinearLayout>
