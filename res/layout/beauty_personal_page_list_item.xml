<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/listview_background_color">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <org.wheat.widget.CircleImageView
                android:id="@+id/beauty_personal_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/beauty_personal_publisher_nikename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="豆芽"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/beauty_personal_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="5分钟前"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/beauty_personal_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/beauty_personal_photo_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="当地时间6月4日，英国伦敦绘公司将亚洲狮的脸描摹在人体模特身上，为伦敦动物学学会分支机构揭幕，呼吁保护濒危生物。"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:id="@+id/beauty_personal_comment_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/beauty_personal_comment_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/beauty_personal_contenDescription"
                    android:src="@drawable/praise" />

                <TextView
                    android:id="@+id/beauty_personal_comment_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="123"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/beauty_personal_praise_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/beauty_personal_comment_area"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/beauty_personal_praise_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/beauty_personal_contenDescription"
                    android:src="@drawable/praise" />

                <TextView
                    android:id="@+id/beauty_personal_praise_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="456"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>