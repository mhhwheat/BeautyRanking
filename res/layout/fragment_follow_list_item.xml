<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
         android:background="@color/white">
        
    <!-- 发布者信息 -->      
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <ImageView 
            android:id="@+id/fragment_follow_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/beauty_personal_contenDescription"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView 
                android:id="@+id/fragment_follow_publisher_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="豆芽"/>
            <TextView
                android:id="@+id/fragment_follow_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:text="5分钟前"/>"
        </LinearLayout>"
    </LinearLayout>
    
    <!-- 图片 -->
    <ImageView
       		
            android:id="@+id/fragment_follow_photo"
            android:src="@drawable/liu"
        	android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_follow_photo_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="当地时间6月4日，英国伦敦绘公司将亚洲狮"
            android:textSize="@dimen/description_text_size" 
            android:textColor="@color/black"/>
        <LinearLayout 
            android:id="@+id/beauty_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp">
            <ImageView 
            	android:id="@+id/beauty_location_img"
            	android:layout_width="20dp"
            	android:layout_height="20dp"
            	android:contentDescription="@string/beauty_personal_contenDescription"
            	android:src="@drawable/location"/>
            
            <TextView
                android:id="@+id/beauty_location_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="start"
                android:text="广东外语外贸大学南校区13栋347广东外语外贸大学南校区13栋347"
                android:textSize="14sp" />
        </LinearLayout>
        
<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        
        >
        <LinearLayout 
            android:id="@+id/fragment_follow_comment_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fragment_follow_comment_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/beauty_personal_contenDescription"
                android:src="@drawable/comment" />

            <TextView 
            	android:id="@+id/fragment_follow_comment_times"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            	android:text="123"/>
         
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/fragment_follow_praise_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/fragment_follow_comment_area"
            android:gravity="center_vertical">
            <ImageView 
            	android:id="@+id/fragment_follow_praise_button"
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:contentDescription="@string/beauty_personal_contenDescription"
            	android:src="@drawable/praise"
            	android:layout_marginRight="5dp"/>
            <TextView 
            	android:id="@+id/fragment_follow_praise_times"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            	android:text="456"/>
        </LinearLayout>
    </RelativeLayout>
 
</LinearLayout>
</LinearLayout>
