<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:alpha="0.8">
   
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/add_photo_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:text="取消"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="添加Ta的照片"
        android:textColor="@color/lightgreen"
        android:textSize="18sp" />

    <Button
        android:id="@+id/add_photo_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:text="发布"
        android:textColor="@color/lightgreen" />

</RelativeLayout>
 <org.wheat.widget.DashedLine
        android:id="@+id/dashline0"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/add_photo_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/add_pic" />

    <org.wheat.widget.DashedLine
        android:id="@+id/dashline1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/beauty_adress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/createbeauty_personinfo_background"
            android:scaleType="fitXY"
            android:src="@drawable/personinfo_location" />

        <TextView
            android:id="@+id/add_photo_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="我的位置"
            android:textColor="#FF000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/add_photo_description"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textview_around"
            android:gravity="top"
            android:hint="个性描述"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textSize="13sp" />

        <!-- <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/add_photo_description"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fabu_button_background"
            android:clickable="true"
            android:text="发布"
            android:textStyle="bold" >
        </Button> -->
    </RelativeLayout>

</LinearLayout>