	     <LinearLayout
	        android:id="@+id/linear3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/linear1"
	        android:layout_marginTop="10dp"
	        >
	    <TextView 
	        android:id="@+id/beauty_info_birthday_label"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/beauty_info_birthday"
	        android:textColor="#FF000000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="2"/>
	    <EditText 
	        android:id="@+id/beauty_info_birthday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/beauty_info_birthday_label"
	        android:hint="9/12"
	        android:textColor="#FF696969"
	        android:background="@null"
	        android:layout_marginTop="10dp"
	        android:layout_weight="5"/>
	    </LinearLayout>
	    <org.wheat.widget.DashedLine
		    android:id="@+id/dashline3"
	    	android:layout_width="fill_parent"
	    	android:layout_height="3dp"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_below="@id/linear3"
	    	/>
	    
	    
	    
	     <LinearLayout
	        android:id="@+id/linear4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/linear3"
	        android:layout_marginTop="10dp"
	        >
	    <TextView 
	        android:id="@+id/beauty_info_constellation_label"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/beauty_info_constellation"
	        android:textColor="#FF000000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="2"/>
	    <EditText 
	        android:id="@+id/beauty_info_constellation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/dashline3"
	        android:layout_toRightOf="@id/beauty_info_constellation_label"
	        android:hint="水瓶座"
	        android:background="@null"
	        android:textColor="#FF696969"
	        android:layout_marginTop="10dp"
	        android:layout_weight="5"/>
	    </LinearLayout>
	    <org.wheat.widget.DashedLine
		    android:id="@+id/dashline4"
	    	android:layout_width="fill_parent"
	    	android:layout_height="3dp"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_below="@id/linear4"
	    	/>
	    
	    
	    
	    
	    
	     <LinearLayout
	        android:id="@+id/linear5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/linear4"
	        android:layout_marginTop="10dp"
	        >
	    <TextView 
	        android:id="@+id/beauty_info_description_label"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/beauty_info_description"
	        android:textColor="#FF000000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="2"/>
	    <EditText 
	        android:id="@+id/beauty_info_description"
			 android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/dashline4"
	        android:layout_toRightOf="@id/beauty_info_description_label"
	        android:hint="水瓶座"
	        android:background="@null"
	        android:textColor="#FF696969"
	        android:layout_marginTop="10dp"
	        android:singleLine="false"
	        android:scrollbars="vertical"
	        android:layout_weight="5"/>
	     </LinearLayout>
	     
	    <org.wheat.widget.DashedLine
		    android:id="@+id/dashline5"
	    	android:layout_width="fill_parent"
	    	android:layout_height="3dp"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_below="@id/linear5"
	    	/>
	    
	  
		 <LinearLayout
	        android:id="@+id/linear6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/linear5"
	        android:layout_marginTop="10dp"
	        >
	    <TextView 
	        android:id="@+id/beauty_info_admission_label"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/location"
	        android:textColor="#FF000000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="2"/>
	    <TextView 
	        android:id="@+id/textview_location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/beauty_info_admission_label"
	        android:hint="2014"
	        android:textColor="#FF696969"
	        android:layout_marginTop="10dp"
	        android:layout_weight="5"
	        android:clickable="true"
	       />
	    </LinearLayout>
	    <org.wheat.widget.DashedLine
		    android:id="@+id/dashline2"
	    	android:layout_width="fill_parent"
	    	android:layout_height="3dp"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_below="@id/linear6"
	    	/>

	    
	    
	    <Button
	        android:id="@+id/submit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/dashline2"
	        android:layout_marginTop="10dp"
	        android:text="submit"
	        ></Button>
	   

	    
	</RelativeLayout>
</LinearLayout>
