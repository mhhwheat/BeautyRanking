<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/add_pic"
        android:scaleType="centerCrop" />

    <org.wheat.widget.DashedLine
        android:id="@+id/dashline0"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:background="@drawable/person_info_background"
            android:id="@+id/llPersonInfo"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="5dp" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/addpic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/createbeauty_personinfo_background"
                android:src="@drawable/personinfo" />

            <TextView
                android:id="@+id/beauty_info_personinfo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="个人信息"
                android:textColor="#FF000000" />
            <ImageView 
                android:id="@+id/beauty_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_next"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                
                />
        </LinearLayout>

        <org.wheat.widget.DashedLine
            android:id="@+id/dashline1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/llPersonInfo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        
        
        
        
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/llPersonInfo"
            android:layout_marginTop="10dp"
            android:padding="5dp" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/beauty_adress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/createbeauty_personinfo_background"
                android:scaleType="fitXY"
                android:src="@drawable/personinfo_location" />

            <TextView
                android:id="@+id/beauty_info_location"
                android:layout_width="0dp"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="我的位置"
                android:textColor="#FF000000" />
        </LinearLayout>

        <org.wheat.widget.DashedLine
            android:id="@+id/dashline3"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/linear2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        
        <!-- 发布权限 -->
        
 <LinearLayout
     		android:clickable="true"
            android:id="@+id/linear3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linear2"
            android:layout_marginTop="10dp"
            android:padding="5dp" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/beauty_privilege"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/createbeauty_personinfo_background"
                android:scaleType="fitXY"
                android:src="@drawable/personinfo_location" />

            <TextView
                android:id="@+id/beauty_info_privilege"
                android:layout_width="wrap_content"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="设置权限"
                android:textColor="#FF000000" />
            
            
             <TextView
                android:id="@+id/beauty_info_privilege_text"
                android:layout_width="wrap_content"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="所有人可修改"
                android:textColor="@color/pink"
                android:gravity="right" />
             
             
         
        </LinearLayout>

        <org.wheat.widget.DashedLine
            android:id="@+id/dashline4"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/linear3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />
        
        
        
        
        
        <Button
            android:clickable="true"
            android:id="@+id/submit"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/dashline3"
            android:layout_marginTop="100dp"
            android:background="@drawable/fabu_button_background"
            android:text="发布" >
        </Button>
        
        
    </RelativeLayout>

</LinearLayout>