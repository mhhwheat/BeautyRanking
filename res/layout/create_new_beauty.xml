<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
           <ImageView
           android:id="@+id/imageView1"
           android:layout_width="fill_parent"
           android:layout_height="100dp"
           android:adjustViewBounds="true"
           android:background="@drawable/user_add"
           android:scaleType="centerCrop" />
           
           <RelativeLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content">
	    <LinearLayout
	        android:id="@+id/linear1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
	        <ImageView
	            android:id="@+id/user_info"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/user_add"
	        />
	        
	    <TextView 
	        android:id="@+id/beauty_info_school_label"
			android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/beauty_info_school"
	        android:textColor="#FF000000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="2"/>
	    <EditText 
	        android:id="@+id/beauty_info_school"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/beauty_info_school_label"
	        android:hint ="广外"
	        android:textColor="#FF696969"
	        android:layout_marginTop="10dp"
			android:background="@null"
	        android:layout_weight="5"/>
	    </LinearLayout>
		<org.wheat.widget.DashedLine
		    android:id="@+id/dashline1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="3dp"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginRight="10dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_below="@id/linear1"
	    	/>
		
		
