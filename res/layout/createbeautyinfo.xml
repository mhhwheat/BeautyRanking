        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp">
            <Button
                android:background="#F0F0F0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        
        <LinearLayout
             android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/msimg5"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/secret5"/>
            <TextView
                android:id="@+id/text5"
                android:text="对Ta的印象 *"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
        </LinearLayout>
        <EditText
            android:id="@+id/persondescription"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textSize="13sp"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:background="@drawable/textview_around"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..个性解释..."
            />
        <Button
            android:text="确定"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sure"/>
	</LinearLayout>

</ScrollView>
</LinearLayout>
