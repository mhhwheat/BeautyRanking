<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/add_pic"
        android:scaleType="centerInside" />

    <org.wheat.widget.DashedLine
        android:id="@+id/dashline0"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/user_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_add" />

            <TextView
                android:id="@+id/beauty_info_school_label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/user_info"
                android:layout_weight="2"
                android:text="个人信息"
                android:textColor="#FF000000" />
            <ImageView 
                android:id="@+id/beauty_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_next"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                
                />
        </LinearLayout>

        <org.wheat.widget.DashedLine
            android:id="@+id/dashline1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/linear1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        
        
        
        
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="10dp"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/beauty_adress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                
                android:scaleType="fitXY"
                android:src="@drawable/user_add" />

            <TextView
                android:id="@+id/beauty_info_constellation_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="我的位置"
                android:textColor="#FF000000" />
        </LinearLayout>

        <org.wheat.widget.DashedLine
            android:id="@+id/dashline3"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@id/linear2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

        
        
        
        <TextView
            android:layout_marginTop="5dp"
             android:layout_below="@id/dashline3"
            android:id="@+id/beauty_descrition"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="描述..."
            android:background="@drawable/textview_around"
            />
        <Button
            android:id="@+id/submit"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/beauty_descrition"
            android:layout_marginTop="10dp"
            android:background="@drawable/submit_backgroud"
            android:text="发布" >
        </Button>
    </RelativeLayout>

</LinearLayout>