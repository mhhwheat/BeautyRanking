<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#F0F0F0">
    

<ScrollView
    android:id="@+id/mysettingpage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:id="@+id/outline"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp">
            <Button
                android:background="#F0F0F0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/share"
            android:clickable="true"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/msimg1"
                android:scaleType="fitXY"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/invite"
                android:background="@drawable/setting_invite_background"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text1"
                android:text="邀请好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp">
            <Button
                android:background="#F0F0F0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        
         
         
         
         
         
         
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/feedback"
             android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/msimg4"
                android:scaleType="fitXY"
                android:background="@drawable/setting_feedback_background"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/feedback"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text4"
                android:text="意见反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
               <org.wheat.widget.DashedLine
                   android:layout_marginLeft="10dp"
             android:background="@color/white"
            android:id="@+id/msdashline3"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
         <LinearLayout
             android:gravity="center_vertical"
             android:id="@+id/aboutus"
             android:clickable="true"
             android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/msimg3"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/guanyu"
                android:background="@drawable/icon_background"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text3"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout> 
        
         
         
            <org.wheat.widget.DashedLine
                android:layout_marginLeft="10dp"
             android:background="@color/white"
            android:id="@+id/msdashline4"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
         <LinearLayout
             android:gravity="center_vertical"
             android:clickable="true"
             android:id="@+id/checkupdate"
             android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/msimg7"
                android:scaleType="fitXY"
                android:background="@drawable/setting_refresh_background"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/refresh"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text7"
                android:text="检查更新"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout> 
  </LinearLayout>
         
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp">
            <Button
                android:background="#F0F0F0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/quitlogin"
            android:clickable="true"
             android:background="@color/white"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/msimg5"
                android:scaleType="fitXY"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/quit"
                android:background="@drawable/setting_logout_background"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text5"
                android:text="退出登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
        </LinearLayout>

	</LinearLayout>

</ScrollView>
</LinearLayout>
