<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/mysettingpage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/outline"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/changeavatar"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/msimg1"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="@drawable/setting_feedback_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/truename" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/persontruename"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="昵称"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/changenickname"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/msimg2"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="@drawable/createbeauty_birthday_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/birthday" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="待定"
                    android:textSize="15sp" />
            </LinearLayout>

            <org.wheat.widget.DashedLine
                android:id="@+id/msdashline1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@id/changenickname"
                android:layout_marginLeft="20dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/msimg3"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="@drawable/createbeauty_birthday_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/school" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/persionschool"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="待定"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/msimg5"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:background="@drawable/createbeauty_birthday_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/description" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名 " />
            </LinearLayout>

            <EditText
                android:id="@+id/persondescription"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textview_around"
                android:gravity="top"
                android:hint="更改你的个性签名"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/sure"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/fabu_button_background"
                android:text="确定" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>