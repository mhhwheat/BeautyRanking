<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_background_color"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_page_item_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2015-01-11" />
        </LinearLayout>

        <ImageView
            android:id="@+id/my_page_item_img"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test3"
            android:adjustViewBounds="true" />
 <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        
        >
        <LinearLayout 
            android:id="@+id/fragment_follow_comment_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fragment_follow_comment_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/beauty_personal_contenDescription"
                android:src="@drawable/comment" 
                android:layout_marginRight="5dp"/>

            <TextView 
            	android:id="@+id/mypageitemprisetimes"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            	android:text="123"/>
         
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/fragment_follow_praise_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/fragment_follow_comment_area"
            android:gravity="center_vertical">
            <ImageView 
            	android:id="@+id/fragment_follow_praise_button"
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:contentDescription="@string/beauty_personal_contenDescription"
            	android:src="@drawable/praise"
            	android:layout_marginRight="5dp"/>
            <TextView 
            	android:id="@+id/mypageitemcommenttimes"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            	android:text="456"/>
        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
</FrameLayout>