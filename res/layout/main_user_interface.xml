<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/replacing_fragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
         />
    
    
    
    


    <LinearLayout
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_ground"
        android:gravity="center"
        android:orientation="horizontal" >

 <!--
        <RadioButton android:id="@+id/rb_first_page"
            style="@style/tab_layout_style"
            android:drawableTop="@drawable/fabu48"
            android:text="发布"
            />
        <RadioButton android:id="@+id/rb_find_page"
            style="@style/tab_layout_style"/>
        <RadioButton android:id="@+id/rb_mine_page"
            style="@style/tab_layout_style"/>
        <RadioButton  android:id="@+id/rb_create_beauty"
            style="@style/tab_layout_style"/> "
            -->
        
 

        <LinearLayout
            android:id="@+id/tab_first_page"
            style="@style/tab_layout_style" >

            <ImageView
                android:src="@drawable/shouye"
                android:id="@+id/tab_first_page_img"
                style="@style/tab_img_style" />


            <TextView
                android:id="@+id/tab_first_page_text"
                style="@style/tab_text_style"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_find_page"
            style="@style/tab_layout_style" >

            <ImageView
                android:src="@drawable/faxian"
                android:id="@+id/tab_find_page_img"
                style="@style/tab_img_style"/>

            <TextView
                android:id="@+id/tab_find_page_text"
                style="@style/tab_text_style"
                android:text="发现" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_mine_page"
            style="@style/tab_layout_style" >

            <ImageView
                 android:src="@drawable/me"
                android:id="@+id/tab_mine_page_img"
                style="@style/tab_img_style"/>

            <TextView
                android:id="@+id/tab_mine_page_text"
                style="@style/tab_text_style"
                android:text="我的" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_create_beauty"
            style="@style/tab_layout_style" >

            <ImageView
                 android:src="@drawable/fabu" 
                android:id="@+id/tab_create_beauty_img"
                style="@style/tab_img_style"/>

            <TextView
                android:id="@+id/tab_create_beauty_text"
                style="@style/tab_text_style"
                android:text="发布" />
        </LinearLayout> 
        
        
    </LinearLayout>

</LinearLayout>