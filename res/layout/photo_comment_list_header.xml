<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <org.wheat.widget.CircleImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/photo_comment_header_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/liu"
            android:contentDescription="@string/content_description" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/photo_comment_header_nike_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_comment_header_avatar"
            android:text="豆芽"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/photo_comment_header_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_comment_header_nike_name"
            android:layout_toRightOf="@id/photo_comment_header_avatar"
            android:text="16小时前"
            android:textColor="#FF696969"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/photo_comment_header_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_comment_header_avatar"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/photo_comment_header_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_comment_header_photo"
            android:text="对面的女孩真可爱"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>