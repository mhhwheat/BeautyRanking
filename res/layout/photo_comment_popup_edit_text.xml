<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:padding="5dp">
	    <Button 
	        android:id="@+id/photo_comment_popup_publish_button"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:text="发表"
	        android:textSize="14sp"
	        android:background="@drawable/blue_button"/>
	    <EditText
	        android:id="@+id/photo_comment_popup_edit"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toLeftOf="@id/photo_comment_popup_publish_button"
	        android:layout_alignTop="@id/photo_comment_popup_publish_button"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:focusable="true"
	        android:hint="来说一句吧" />
	</RelativeLayout>
</RelativeLayout>
