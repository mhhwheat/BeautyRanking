<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/loginuserphonenumber"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/loginedittextbackground"
            android:gravity="center"
            android:hint="手机号码"
            android:phoneNumber="true"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/loginpassword"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/loginedittextbackground"
                android:gravity="center"
                android:hint="验证码"
                android:password="true"
                android:textSize="17sp" />

            <Button
                android:id="@+id/confirm_phone_number_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dp"
                android:background="@drawable/confirm_button_background"
                android:text="获取验证码"
                android:textSize="14sp"
                android:layout_weight="2" />
        </LinearLayout>

        <Button
            android:id="@+id/registergo"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/loginbuttonbackground"
            android:gravity="center"
            android:text="提交"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>